{
  "name": "omada-discord-webhook-bridge",
  "version": "1.0.0",
  "description": "Bridge between Omada webhook notifications and Discord webhook format",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "node test-webhook.js",
    "lint": "echo 'Add linter here if needed'"
  },
  "keywords": [
    "omada",
    "discord",
    "webhook",
    "bridge",
    "tp-link"
  ],
  "author": "https://github.com/underscorejasiu",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "discord.js": "^14.14.1",
    "helmet": "^7.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "joi": "^17.11.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/server.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": ["text", "lcov", "html"],
    "testMatch": [
      "**/tests/**/*.test.js"
    ]
  }
}
